{
  "name": "Source",
  "plural": "Sources",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "number",
      "required": true
    },
    "connected": {
      "type": "boolean",
      "default": false
    },
    "inputIdList": {
      "type": [
        "number"
      ],
      "default": []
    }
  },
  "validations": [],
  "relations": {
    "relatedInputs": {
      "type": "hasMany",
      "model": "Input",
      "foreignKey": "sourceId"
    }
  },
  "acls": [],
  "methods": {
    "prototype.disconnect": {
      "accepts": [
        {
          "arg": "sourceId",
          "type": "number",
          "required": false,
          "description": "Id of Source to be disconnected",
          "http": {
            "source": "form"
          }
        }
      ],
      "returns": [],
      "description": "Disconnect Source from all Inputs",
      "http": [
        {
          "path": "/disconnect",
          "verb": "post"
        }
      ]
    }
  }
}
