{
  "name": "Source",
  "plural": "Sources",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "number",
      "required": true
    },
    "connected": {
      "type": "boolean",
      "default": false
    },
    "inputIdList": {
      "type": [
        "number"
      ],
      "default": []
    },
    "workspaceId": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "accountId": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "workerConfig": {
      "type": "object"
    }
  },
  "validations": [],
  "relations": {
    "relatedInputs": {
      "type": "hasMany",
      "model": "Input",
      "foreignKey": "sourceId"
    }
  },
  "acls": [],
  "methods": {
    "prototype.disconnect": {
      "accepts": [
        {
          "arg": "inputIdList",
          "type": "array",
          "required": true,
          "description": "Id list of Inputs to be disconnected",
          "http": {
            "source": "form"
          }
        }
      ],
      "returns": [],
      "description": "Disconnect Source from Inputs",
      "http": [
        {
          "path": "/disconnect",
          "verb": "post"
        },
        {
          "path": "/disconnect",
          "verb": "put"
        }
      ]
    },
    "prototype.connect": {
      "accepts": [
        {
          "arg": "inputIdList",
          "type": "array",
          "required": true,
          "description": "Id list of Inputs to be connected",
          "http": {
            "source": "form"
          }
        }
      ],
      "returns": [],
      "description": "Connect Source to Inputs",
      "http": [
        {
          "path": "/connect",
          "verb": "post"
        },
        {
          "path": "/connect",
          "verb": "put"
        }
      ]
    }
  }
}
